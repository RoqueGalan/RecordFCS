@{
    var alertas = TempData.ContainsKey(RecordFCS.Helpers.Alerta.TempDataKey)
                ? (List<RecordFCS.Helpers.Alerta>)TempData[RecordFCS.Helpers.Alerta.TempDataKey]
                : new List<RecordFCS.Helpers.Alerta>();

    foreach (var alerta in alertas)
    {
        var claseDescartable = alerta.Descartable ? "alert-dismissable" : null;
        <div class="alert alert-@alerta.AlertaEstilo @claseDescartable alert-contenido">
            @if (alerta.Descartable)
            {
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
            }

            @Html.Raw(alerta.Mensaje)
        </div>
    }
}

