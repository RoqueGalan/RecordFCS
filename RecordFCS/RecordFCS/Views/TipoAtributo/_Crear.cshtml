@model RecordFCS.Models.TipoAtributo

@{
    ViewBag.PagName = "Crear";
    ViewBag.CtrlName = "Tipo de Atributo";
    ViewBag.Title = @ViewBag.PagName;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">
        <b>@ViewBag.PagName</b>
        <i class="text-muted">@ViewBag.CtrlName</i>
    </h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
                    <p class="help-block">Nombre descriptivo.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NombreHTML, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreHTML, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.NombreHTML, "", new { @class = "text-danger" })
                    <p class="help-block">Nombre sin espacios y acentos.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NombreID, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NombreID, new { htmlAttributes = new { @class = "form-control input-sm"} })
                    @Html.ValidationMessageFor(model => model.NombreID, "", new { @class = "text-danger" })
                    <p class="help-block">Atributo dinamico = "Generico", Si es una implementacion en Obra o Pieza Colocar en nombre del campo.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DatoHTML, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DatoHTML, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.DatoHTML, "", new { @class = "text-danger" })
                    <p class="help-block">text, textarea, date, number, etc. (consultar datos de html5)</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.DatoCS, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DatoCS, new { htmlAttributes = new { @class = "form-control input-sm" } })
                    @Html.ValidationMessageFor(model => model.DatoCS, "", new { @class = "text-danger" })
                    <p class="help-block">string, datetime, int, double, etc.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EsLista, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.EsLista)
                        @Html.ValidationMessageFor(model => model.EsLista, "", new { @class = "text-danger" })
                    </div>
                    <p class="help-block">Activar si el atributo sera un catalogo.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Buscador, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Buscador)
                        @Html.ValidationMessageFor(model => model.Buscador, "", new { @class = "text-danger" })
                    </div>
                    <p class="help-block">Activar para que este atributo sea un filtro en el buscador.</p>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.BuscadorOrden, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.BuscadorOrden, new { htmlAttributes = new { @class = "form-control input-sm"} })
                    @Html.ValidationMessageFor(model => model.BuscadorOrden, "", new { @class = "text-danger" })
                    <p class="help-block">En que orden quieres que se muestre (1-100)</p>
                </div>
            </div>

        </div>

    </div>

    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancelar</button>
        <input class="btn btn-primary" type="submit" value="Agregar" />
    </div>
}

@Scripts.Render("~/bundles/jqueryval")