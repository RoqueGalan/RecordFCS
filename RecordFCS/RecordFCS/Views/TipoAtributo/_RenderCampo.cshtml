@model RecordFCS.Models.TipoAtributo
@{
    if (Model.EsLista)
    {
        <div class="form-group">
            <label class="control-label col-md-2" for="@Model.Nombre">@Model.Nombre</label>
            @Html.DropDownList("Valores", null, htmlAttributes: new { @class = "form-control" })
        </div>

    }
    else
    {
        <div class="form-group">
            <label class="control-label col-md-2" for="@Model.Nombre">@Model.Nombre</label>
            <div class="col-md-10">
                <input class="form-control text-box single-line" id="@Model.Nombre" name="@Model.Nombre" type="@Model.DatoHTML" value="" />
                <span class="field-validation-valid text-danger" data-valmsg-for="@Model.Nombre" data-valmsg-replace="true"></span>
            </div>
        </div>


    }
}
