@model IEnumerable<RecordFCS.Models.TipoObra>
@using RecordFCS.Helpers

<p class="text-right">
    Total de Registros <span class="badge">@ViewBag.totalRegistros</span>
</p>


<table class="table table-hover table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoPiezas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @if (User.IsInRole("TipoObraCrear"))
            {
                @Html.NoEncodeActionLink("<span class='fa fa-plus'></span>", "Crear", "Crear", "TipoObra", null, htmlAttributes: new { data_modal = "", @class = "btn btn-success btn-xs pull-right TipoObra" })
            }
        </th>
    </tr>


    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <ul>
                    @foreach (var tipoPieza in item.TipoPiezas)
                    {
                        <li>@tipoPieza.Nombre</li>
                    }
                </ul>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <div class="pull-right">
                    @if (User.IsInRole("TipoPiezaVer"))
                    {
                        @Html.NoEncodeActionLink("<span class='fa fa-gear'></span>", "Detalles", "Detalles", "TipoObra", routeValues: new { id = item.TipoObraID }, htmlAttributes: new { @class = "btn btn-primary btn-xs" })
                    }
                    @if (User.IsInRole("TipoObraEdit"))
                    {
                        @Html.NoEncodeActionLink("<span class='fa fa-pencil'></span>", "Editar", "Editar", "TipoObra", routeValues: new { id = item.TipoObraID }, htmlAttributes: new { data_modal = "", @class = "btn btn-default btn-xs TipoObra" })
                    }
                    @if (User.IsInRole("TipoObraEliminar"))
                    {
                        @Html.NoEncodeActionLink("<span class='fa fa-trash'></span>", "Eliminar", "Eliminar", "TipoObra", routeValues: new { id = item.TipoObraID }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger btn-xs TipoObra" })
                    }
                </div>
            </td>
        </tr>

    }
</table>


